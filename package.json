{
  "name": "wglmolview",
  "version": "2.1.0",
  "description": "Simple WebGL Molecule Viewer",
  "author": "eric.mulvihill@gmail.com",
  "repository": "ericmulvihill/wglmolview",
  "license": "Apache-2.0",
  "main": "index.ts",
  "private": true,
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts | pino-pretty",
    "build": "tsup && browserify dist/main.js --outfile www/dist/molview.bundle.js",
    "start": "node dist/index.js",
    "clean": "rimraf dist www/dist coverage",
    "lint": "eslint  --flag unstable_ts_config src/",
    "format": "biome format src/",
    "test": "vitest run",
    "prepare": "husky"
  },
  "dependencies": {
    "browserify": "^17.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "envalid": "^8.0.0",
    "express": "^4.19.2",
    "http-status-codes": "^2.3.0",
    "pino": "^9.4.0",
    "pino-http": "^10.0.0",
    "three": "0.85.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@swc/core": "^1.7.40",
    "@types/cors": "^2.8.17",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^4.17.21",
    "@types/supertest": "^6.0.2",
    "@types/three": "0.89.12",
    "eslint": "^9.13.0",
    "husky": "^9.0.11",
    "jsdom": "^25.0.1",
    "pino-pretty": "^11.0.0",
    "rimraf": "^6.0.0",
    "supertest": "^7.0.0",
    "tsup": "^8.0.2",
    "tsx": "^4.7.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.12.2",
    "vite-tsconfig-paths": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "tsup": {
    "entry": [
      "src",
      "!src/**/__tests__/**",
      "!src/**/*.test.*"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}
