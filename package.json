{
  "name": "wglmolview",
  "version": "2.1.0",
  "description": "Simple WebGL Molecule Viewer",
  "author": "eric.mulvihill@gmail.com",
  "repository": "ericmulvihill/wglmolview",
  "license": "Apache-2.0",
  "main": "index.ts",
  "private": true,
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts | pino-pretty",
    "build": "tsup && browserify dist/main.js --outfile www/dist/molview.bundle.js",
    "start": "node dist/index.js",
    "clean": "rimraf dist www/dist coverage",
    "lint": "biome check src/",
    "lint:fix": "biome check src/ --fix",
    "format": "biome format src/",
    "test": "vitest run",
    "prepare": "husky"
  },
  "dependencies": {
    "browserify": "^17.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "envalid": "^8.0.0",
    "express": "^4.19.2",
    "http-status-codes": "^2.3.0",
    "pino": "^9.4.0",
    "pino-http": "^10.0.0",
    "three": "0.85.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@swc/core": "^1.7.40",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/supertest": "^6.0.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "pino-pretty": "^11.0.0",
    "rimraf": "^6.0.0",
    "supertest": "^7.0.0",
    "tsup": "^8.0.2",
    "tsx": "^4.7.2",
    "typescript": "^5.4.4",
    "vite-tsconfig-paths": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,json,jsonc}": ["biome check --apply --no-errors-on-unmatched"]
  },
  "tsup": {
    "entry": ["src", "!src/**/__tests__/**", "!src/**/*.test.*"],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}
